<!-- SeatReservationMapper.xml -->

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.spam9700.spam.dao.SeatReservationDao">

    <!-- 모든 좌석 예약 목록 조회 -->
    <select id="getAllSeatReservations" resultType="com.spam9700.spam.dto.SeatReservationDto">
        SELECT * FROM seat_reservations
    </select>

    <!-- 좌석 예약 생성 -->
    <insert id="createSeatReservation" parameterType="com.spam9700.spam.dto.SeatReservationDto">
        INSERT INTO seat_reservations (customer_id, seat_number, start_time, end_time)
        VALUES (#{customer_id}, #{seat_number}, #{start_time}, #{end_time})
    </insert>
    
    <!-- 좌석 번호로 좌석 예약 목록 조회 -->
    <select id="getSeatReservationsBySeatNumber" resultType="com.spam9700.spam.dto.SeatReservationDto">
        SELECT * FROM seat_reservations WHERE seat_number = #{seatNumber}
    </select>

</mapper>
